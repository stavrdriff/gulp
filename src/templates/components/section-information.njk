{% macro socials (
   socials = [
      {
         url: "https://www.facebook.com/",
         spanClassName: "icon-facebook",
         title: "Facebook"
      },
      {
         url: "https://www.instagram.com/",
         spanClassName: "icon-instagram",
         title: "Instagram"
      },
      {
         url: "https://www.twitter.com/",
         spanClassName: "icon-twitter",
         title: "Facebook"
      },
      {
         url: "https://www.linkedin.com/",
         spanClassName: "icon-linkedin",
         title: "Facebook"
      }
   ]
   ) %}
   <div class="socials">
      {% for link in socials %}
         <a href="{{ link.url }}" class="socials__link" target="_blank" title="{{ link.title }}"><span class="{{ link.spanClassName }}"></span></a>
      {% endfor %}
   </div>
{% endmacro %}

