{% endmacro %}


{% macro sectionInformation() %}
   <section class="information">
      <div class="container">
         <div class="information__container">
            <div class="information__contacts">
               <h5 class="information__title">{{ companyName }}</h5>
               <p class="information__text">We earned a reputation of being good at what we do.
                  Let us take your online shop to new dimension in
                  success!</p>

                  {{ contacts() }}

                  {{ socials() }}

            </div>
            <div class="information__links">
               <h5 class="information__title">recive email updates</h5>
               <form class="information__subscribe">
                  <input class="information__input" type="email" placeholder="your email address" required>
                  <button class="information__btn">join</button>
               </form>
               
               {{ informationColumns() }}

            </div>
         </div>
      </div>  
      {{ caller() }}
   </section>
{% endmacro %}